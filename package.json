{
  "name": "site-deploy",
  "version": "1.0.0",
  "main": "script.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "wsl docker compose -f infra/compose.yaml up -d",
    "services:stop": "wsl docker compose -f infra/compose.yaml stop",
    "services:down": "wsl docker compose -f infra/compose.yaml down",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "migration:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up"
  },
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "dotenv": "^16.4.4",
    "next": "^13.5.7",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "prettier": "^3.5.2"
  }
}
